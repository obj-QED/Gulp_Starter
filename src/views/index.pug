extends layouts/default
include helpers/mixins

block variables
  - const title = "Gulp Pug"

block content
  include ../blocks/modules/header/header
  include ../blocks/modules/questionary/questionary
  include ../blocks/modules/footer/footer


block scripts
  script(src='https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js')
  link(href='https://cdnjs.cloudflare.com/ajax/libs/jqueryui/1.12.1/jquery-ui.min.css' rel='stylesheet')
  script(src='https://code.jquery.com/ui/1.12.0/jquery-ui.min.js' integrity='sha256-eGE6blurk5sHj+rmkfsGYeKyZx3M4bG+ZlFyA7Kns7E=' crossorigin='anonymous')

  script.
    let sliderBlock = $(".toddler__slide .slider .slider__rage");
    sliderBlock.slider({
      range: true,
      min: -100,
      max: 100,
      values: [ 12, 32 ],
      step: 1,
      slide: function( event, ui ) {
        $('.toddler__slider-min').text(ui.values[ 0 ]);
        $('.toddler__slider-max').text(ui.values[ 1 ]);
      }
    });
    $('.toddler__slider-min').text(sliderBlock.slider("values", 0));
    $('.toddler__slider-max').text(sliderBlock.slider("values", 1));


  script(src="js/vendor.js")
  script(src="js/main.js")